{% extends "BuntsuuMainBundle:All:layout.html.twig" %}

{%block  principal_content %}
<div id="first">
	<h2> <img src="{{ asset("bundles/buntsuumain/images/search.png") }}"  /> Search </h2>
	<form action="" class="side-by-side clearfix" method="post">
       
       <label>Spoken</label>
       <select  class="chzn-select">
       	{% for language in languages %}
       		<option>{{ language.name }}</option>
       	{% endfor %}
       	</select>

       	<label>Searched</label>
       	<select  class="chzn-select">
       	{% for language in languages %}
       		<option>{{ language.name }}</option>
       	{% endfor %}
       </select>

       
        <input type="submit" />
    </form>
</div>
<div id="second">
	<h2> <img src="{{ asset("bundles/buntsuumain/images/subscribe.png") }}"  /> Sign Up </h2>
	<p></p>
	<!--  FORMULAIRE DE LOGIN -->
	<div class="clear"></div>
	<div>
	{% if error %}
    	<div>{{ error.message }}</div>
	{% endif %}
		<form action="{{ path('login_check') }}" method="post">
		    <label for="username">Username:</label>
		    <input type="text" id="username" name="_username" value="{{ last_username }}" />
		
		    <label for="password">Password:</label>
		    <input type="password" id="password" name="_password" />
		
		    {#
		        If you want to control the URL the user is redirected to on success (more details below)
		        <input type="hidden" name="_target_path" value="/account" />
		    #}
		
		    <button type="submit">login</button>
		</form>
	</div>
	
</div>
<div class="clear"></div>
{% endblock %}