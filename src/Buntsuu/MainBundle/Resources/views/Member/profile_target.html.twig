{% extends "BuntsuuMainBundle:Member:layout.html.twig" %}

{%block  principal_content %}

<h2 id="title_page"> Profile </h2><img id="mini" src="{{ asset('bundles/buntsuumain/images/profil.png') }}" alt="profile"/>
<div class="clear"></div>
<div id="content_third">
<div class="classic_top">{% if user.gender == 0 %}
<img src="{{ asset('bundles/buntsuumain/images/0.png') }}" alt="skype"/>
{% else %}
<img src="{{ asset('bundles/buntsuumain/images/1.png') }}" alt="skype"/>
{% endif %} {{ user.username }}</div>
<div class="email"><img src="{{ asset('bundles/buntsuumain/images/email.png') }}" alt="email"/>  Email </div>
<div class="letter"><img src="{{ asset('bundles/buntsuumain/images/letter.png') }}" alt="letter"/>  Adress </div>
<div class="classic_bottom"><img src="{{ asset('bundles/buntsuumain/images/birthday.png') }}" alt="skype"/> Birthday {{ user.birthdate }}</div>
<div class="skype" ><img src="{{ asset('bundles/buntsuumain/images/skype.png') }}" alt="skype"/>  {{ user.skype }}</div>
<div class="facebook"><img src="{{ asset('bundles/buntsuumain/images/facebook.png') }}" alt="facebook"/>  {{ user.facebook }}</div>
</div>
<div id="content_first">
{% if preference is not empty %}
<h3>My preferences :</h3>
	{{ preference.skype }}
	{{ preference.facebook }}
	{{ preference.letter }}
	{{ preference.email }}
{% endif %}
</div>
<div class="clear"></div>
{% endblock %}